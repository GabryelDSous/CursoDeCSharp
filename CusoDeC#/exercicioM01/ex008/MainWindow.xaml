        <Button Content="SORTEAR" Margin="87,272,27,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="59" FontSize="26" FontWeight="SemiBold" Click="Button_Click"/>
        <Label x:Name="lblSort" Content="" HorizontalAlignment="Left" Margin="87,383,0,0" VerticalAlignment="Top" Width="241" Grid.ColumnSpan="2" Height="48" HorizontalContentAlignment="Center" Padding="5,14,5,5" Visibility="Hidden" FontSize="22"/>

    </Grid>
</Window>
